<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Rate <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |r| %>
        <%= r.input :content %>
        <%= r.input :rating, collection: (0..5) %>
        <%= r.button :submit %>
      <% end %>
    </div>
  </div>
</div>
